extends layout

block content
  form(method='post', action='/signup', enctype='application/x-www-form-url encoded')
    h3 Sign Up
    if exists
      .error
        | That user exists. Are you trying to a(href="/login") Login | ?
    if invalid
      .error Please enter a valid email address and password'
      ul
        li
          label(for='email') Email
          input#email(name='email')
        li
          label(for='pass') Password
          input#pass(name='pass')
        input(TYPE='submit', value='Sign Up')